<h1>Listing bins</h1>

<ul>
  <% @bins.each do |bin| %>
    <li>
      <h2><%= link_to bin.title, bin %></h2>
      <p><%= bin.description %></p>
      <%= link_to 'Edit', edit_bin_path(bin), class: 'pure-button' %>
      <%= link_to 'Destroy', bin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'pure-button' %>
    </li>
  <% end %>
</ul>

<br>

<%= link_to 'New Bin', new_bin_path, class: 'pure-button pure-button-primary' %>
